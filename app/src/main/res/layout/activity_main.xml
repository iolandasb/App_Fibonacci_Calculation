<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1B1B3A"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="287dp"
        android:layout_height="83dp"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Insira uma posição da Sequência de Fibonacci para verificar toda a sequência até esse ponto."
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="21dp" />

    <EditText
        android:id="@+id/edtCampo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:ems="10"
        android:hint="Insira a posição"
        android:textColorHint="#FFFFFF"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="21dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:textColor="#FFFFFF"
        android:background="#693668"
        android:text="Button" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sequência de Fibonacci"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>